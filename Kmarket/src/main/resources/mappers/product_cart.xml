<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.kmarket.dao.ProductCartDao">
	<insert id="insertProduct"></insert>
	<insert id="insertCart">
		INSERT INTO `km_product_cart` SET
			`uid`=#{uid},
			`productCode`=#{productCode},
			`count`=#{count},
			`price`=#{price},
			`discount`=#{discount},
			`point`=#{point},
			`delivery`=#{delivery},
			`total`=#{total},
			`rdate` = NOW();
	</insert>
	
	<select id="selectCountCart" resultType="int">
		SELECT COUNT(`cartId`) FROM `km_product_cart`
		WHERE `uid`=#{uid} AND `productCode`=#{productCode};
	</select>
	
	<select id="selectCart"></select>
	<select id="selectCarts"></select>
	
	<update id="updateCart"></update>
	<delete id="deleteCart"></delete>
  
</mapper>
