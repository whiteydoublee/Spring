<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.sboard.dao.MemberDao">
	<insert id="insertMember">
		INSERT INTO `member` SET
			`uid`=#{uid},
			`pass`=PASSWORD(#{pass1}),
			`name`=#{name},
			`nick`=#{nick},
			`email`=#{email},
			`hp`=#{hp},
			`zip`=#{zip},
			`addr1`=#{addr1},	
			`addr2`=#{addr2},	
			`regip`=#{regip},	
			`rdate`=NOW();
	</insert>
	<select id="selectTerms" resultType="kr.co.sboard.vo.TermsVo">
		SELECT * FROM `Jboard_terms`;
	</select>
	<select id="selectMember" resultType="kr.co.sboard.vo.MemberVo">
		SELECT * FROM `member` WHERE `uid`=#{uid} AND `pass`=PASSWORD(#{pass});
	</select>
	<select id="selectMembers"></select>
	<select id="selectCountUid" resultType="int">
		SELECT COUNT(`uid`) FROM `member` WHERE `uid`=#{uid};
	</select>
	<select id="selectCountNick" resultType="int">
		SELECT COUNT(`nick`) FROM `member` WHERE `nick`=#{nick};
	</select>
	<select id="selectCountEmail" resultType="int">
		SELECT COUNT(`email`) FROM `member` WHERE `email`=#{email};
	</select>
	<select id="selectCountHp" resultType="int">
		SELECT COUNT(`hp`) FROM `member` WHERE `hp`=#{hp};
	</select>
	
	<update id="updateMember"></update>
	<delete id="deleteMember"></delete>
</mapper>






