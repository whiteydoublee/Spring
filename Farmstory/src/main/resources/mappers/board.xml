<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.farmstory.dao.MemberDao">
	<insert id="inserArticle">
		INSERT INTO `article` SET
			`title`=#{title},
			`content`=#{content},
			`file`=#{file},<!-- 파일에 대한 매개변수 값을 받아와ㅏ야하므로: LEFT JOIN 함 -->
			`uid`=#{uid},
			`regip`=#{regip},
			`rdate`=NOW();
	</insert>
	<insert id="insertFile">
		INSERT INTO `Jboard_file` SET
			`parent`= #{parent},
			`oriName`= #{oriName},
			`newName`= #{newName},
			`rdate`= NOW();
	</insert>
	
	<select id="selectArticle">
	</select>
	<select id="selectArticles" resultType="kr.co.farmstory.vo.ArticleVo">
		SELECT a.*, b.nick FROM `article` AS a
		JOIN `member` AS b ON a.uid=b.uid
		WHERE `parent`=0 AND `cate`='#{cate}'
		ORDER BY `rdate` DESC
		LIMIT #{start}, 10;
	</select>
	<update id="updateArticle"></update>
	<delete id="deleteArticle"></delete>
</mapper>






